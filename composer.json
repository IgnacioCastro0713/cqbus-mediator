{
    "name": "ignaciocastro0713/cqbus-mediator",
    "description": "A Mediator for Laravel",
    "keywords": [
        "laravel",
        "cqrs",
        "mediator",
        "cqbus-mediator"
    ],
    "homepage": "https://github.com/IgnacioCastro0713/cqbus-mediator",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Ignaciocastro0713\\CqbusMediator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/Tests/",
            "Unit\\": "tests/Unit/",
            "Feature\\": "tests/Feature/",
            "Tests\\Fixtures\\": "tests/Fixtures/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ignaciocastro0713\\CqbusMediator\\MediatorServiceProvider"
            ]
        }
    },
    "authors": [
        {
            "name": "Ignacio Menchaca",
            "email": "ignacio.g3@hotmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10.0 || ^11.0 || ^12.0",
        "illuminate/support": "^10.0 || ^11.0 || ^12.0",
        "illuminate/container": "^10.0 || ^11.0 || ^12.0",
        "illuminate/filesystem": "^10.0 || ^11.0 || ^12.0",
        "illuminate/pipeline": "^10.0 || ^11.0 || ^12.0",
        "spatie/php-structure-discoverer": "^2.3"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^9.5|^10.0|^11.5.3",
        "mockery/mockery": "^1.6",
        "friendsofphp/php-cs-fixer": "^3.84",
        "pestphp/pest": "^2.11|^3.0|^3.8",
        "phpstan/phpstan": "^2.1"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "check": [
            "@format",
            "@analyse",
            "@test"
        ]
    }
}
